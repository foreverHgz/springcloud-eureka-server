<configuration>

    <!-- 定义日志输出格式 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />

    <!-- 定义日志文件的输出路径和文件名 -->
    <property name="LOG_FILE" value="logs/springcloud-eureka-server.log" />

    <!-- 定义根日志输出 -->
    <!--    <appender name="FILE" class="ch.qos.logback.core.FileAppender">-->
    <!--        <file>${LOG_FILE}</file>-->
    <!--        <encoder>-->
    <!--            <pattern>${LOG_PATTERN}</pattern>-->
    <!--        </encoder>-->
    <!--    </appender>-->

    <!-- 定义日志归档策略 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 定义归档文件的路径和文件名 -->
            <fileNamePattern>logs/redis-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- 定义日志文件的最大大小 -->
            <maxFileSize>100MB</maxFileSize>
            <!-- 定义归档文件保留的最长时间 单位：天，0：永远保留 -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 将不同包下的日志级别分别配置 -->
    <logger name="org.springframework.cache" level="DEBUG" />
    <logger name="org.springframework.jdbc.core" level="DEBUG" />

    <!-- ShardingSphere 日志记录器 -->
    <logger name="org.mybatis" level="DEBUG" />
    <logger name="com.zaxxer.hikari" level="DEBUG" />
    <logger name="io.netty" level="DEBUG" />
    <logger name="org.apache.shardingsphere" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- 将根日志输出到文件 -->
    <root level="DEBUG">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </root>

</configuration>

